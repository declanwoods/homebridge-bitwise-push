{
  "pluginAlias": "BitwisePushGarageDoor",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "type": "array",
        "required": true,
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "ip": {
              "title": "IP",
              "type": "string",
              "required": true,
              "format": "ipv4"
            },
            "port": {
              "title": "UDP Port Number",
              "type": "number",
              "required": true
            },
            "output": {
              "title": "Output Number",
              "type": "number",
              "required": true,
              "min": 1,
              "max": 2
            },
            "threshold": {
              "title": "Closed Threshold",
              "type": "number",
              "required": false
            }
          }
        }
      }
    }
  }
}